# Application
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=change-this-to-a-random-secret-in-production

# Database (Use SQLite for local, Supabase for production)
# Local development
DATABASE_URL=sqlite:///./app.db

# Production (from Supabase)
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# Groq API (Required)
GROQ_API_KEY=gsk_your_groq_api_key_here
GROQ_MODEL=llama-3-70b-versatile

# Huey Background Tasks (Uses SQLite - no external service)
HUEY_IMMEDIATE=False  # Set to True for synchronous testing

# File Storage
UPLOAD_DIR=./uploads

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","https://your-frontend.vercel.app"]
